#include <iostream>
using namespace std;
class student {
char student_name[10];
int  roll_no;
float marks;
public:
void student_detail()
{
    cout <<"enter the student name:"<<endl;
    cin >>student_name;
    
    cout <<"enter the student roll no:"<<endl;
    cin >>roll_no;
    
    cout <<"enter the student marks:"<<endl;
    cin >>marks;
}
void display_student_detail()
{
    cout <<"the name of student is:"<<student_name<<endl;
    cout <<"the roll no of student:"<<roll_no<<endl;
    cout <<"the marks of student id:"<<marks<<endl;
}
};
int main() 
{
    student s;
    s.student_detail();
    s.display_student_detail();
}
